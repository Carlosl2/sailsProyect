<div class="row">
    <div class="col-md-12">

        <% flash.get('mensaje').forEach(function (msg) { %>
            <div class="alert alert-danger" role="alert">
                <%=msg%>
            </div>
        <% }) %>

        <h2>Ordenes</h2>

        <table class="table">
            <thead>
                <tr>
                    <th scope="row">ID</th>
                    <th scope="row">Fecha</th>
                    <th scope="row">Total fotos</th>
                </tr>
            </thead>
            <tbody>
                <% ordenes.forEach( orden => {%>
                    <tr>
                        <td scope="row"><%=orden.id%></td>
                        <td scope="row"><%=orden.fecha%></td>
                        <td scope="row"><%=orden.total%><a class="btn btn-light mx-2" href="/orden-detalle/<%=orden.id%>"><i class="fas fa-search"></i> Ver</a></td>
                    </tr>
                
                
                
                
                
                    <% }) %>
            </tbody>
        </table>









    </div>
</div>